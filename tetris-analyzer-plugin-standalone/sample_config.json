  "display": {
    "verbose": false,
    "show_predictions": true,
    "show_coaching": true,
    "show_statistics": true,
    "stats_interval": 5.0,
    "log_level": "INFO"
  },
  "performance": {
    "max_cpu_usage": 80.0,
    "max_memory_usage": 512,
    "enable_threading": true,
    "enable_profiling": false,
