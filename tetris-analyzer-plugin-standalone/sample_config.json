{
  "capture": {
    "fps": 30,
    "quality": "high",
    "monitor": 0,
    "region": null
  },
  "detection": {
    "method": "edges",
    "threshold": 0.8,
    "min_board_size": [
      200,
      400
    ],
    "max_board_size": [
      400,
      800
    ],
    "edge_threshold1": 50,
    "edge_threshold2": 150
